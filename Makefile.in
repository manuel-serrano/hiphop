clean-nodejs: 
	rm -f $(NODEJSFILES)

clean-npm:
	rm -rf npm

clean: clean-nodejs
	rm -rf lib/*.so
	rm -rf ulib/*.so
	rm -rf modules/*.so
	rm -rf preprocessor/*.so

cleanall: clean
	rm -f config.status
	rm -f lib/config.js
	rm -rf arch/debian/debian
	rm -rf modules/node_modules/@hop/hiphop

distclean: cleanall

